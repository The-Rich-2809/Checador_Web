@{
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asistencias de Empleados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Asistencias de Empleados</h2>

        <!-- Filtros -->
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="filterSite" class="form-label">Filtrar por Site:</label>
                <select id="filterSite" class="form-select">
                    <option value="">Todos</option>
                    <option value="CDMX">CDMX</option>
                    <option value="Guadalajara">Guadalajara</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterEncargado" class="form-label">Filtrar por Encargado:</label>
                <select id="filterEncargado" class="form-select">
                    <option value="">Todos</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="startDate" class="form-label">Fecha Inicio:</label>
                <input type="date" id="startDate" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="endDate" class="form-label">Fecha Fin:</label>
                <input type="date" id="endDate" class="form-control">
            </div>
        </div>

        <!-- Tabla -->
        <table id="tablaAsistencias" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Site</th>
                    <th>Tipo Empleado</th>
                    <th>Encargado</th>
                    <th>Fecha</th>
                    <th>Hora de Entrada</th>
                    <th>Hora de Salida</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Juan Pérez</td>
                    <td>CDMX</td>
                    <td>Tiempo Completo</td>
                    <td>José Martínez</td>
                    <td>2025-03-03</td>
                    <td>08:00</td>
                    <td>17:00</td>
                    <td>Presente</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>María López</td>
                    <td>Guadalajara</td>
                    <td>Medio Tiempo</td>
                    <td>Laura Gómez</td>
                    <td>2025-03-03</td>
                    <td>08:30</td>
                    <td>17:30</td>
                    <td>Tarde</td>
                </tr>
            </tbody>
        </table>
    </div>

    @section scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                var table = $('#tablaAsistencias').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
                    },
                    "paging": false
                });

                var encargadosPorSite = {
                    "CDMX": ["José Martínez"],
                    "Guadalajara": ["Laura Gómez"]
                };

                // Filtrar por Site
                $('#filterSite').on('change', function () {
                    var site = $(this).val();
                    var encargadoSelect = $('#filterEncargado');
                    encargadoSelect.empty().append('<option value="">Todos</option>');

                    if (site && encargadosPorSite[site]) {
                        encargadosPorSite[site].forEach(function (encargado) {
                            encargadoSelect.append('<option value="' + encargado + '">' + encargado + '</option>');
                        });
                    }

                    table.columns(2).search(site).draw();
                });

                // Filtrar por Encargado
                $('#filterEncargado').on('change', function () {
                    var encargado = $(this).val();
                    table.columns(4).search(encargado).draw();
                });

                // Filtrar por rango de fechas
                $('#startDate, #endDate').on('change', function () {
                    var startDate = $('#startDate').val();
                    var endDate = $('#endDate').val();

                    table.draw();
                });

                // Extender DataTables para filtrar por rango de fechas
                $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
                    var min = $('#startDate').val();
                    var max = $('#endDate').val();
                    var date = data[5]; // Columna de la fecha

                    if (min && date < min) {
                        return false;
                    }
                    if (max && date > max) {
                        return false;
                    }
                    return true;
                });

            });
        </script>
    }

</body>
</html>
