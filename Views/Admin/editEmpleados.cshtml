@model Checador.Models.Empleado
@{
    Layout = "_LayoutAdmin";
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nuevo Empleado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function toggleOptions() {
            let opciones = document.getElementById("opciones");
            let categoria = document.getElementById("Categoria").value;
            let email = document.getElementById("Email");
            let password = document.getElementById("Password");

            if (categoria === "Administrador") {
                opciones.classList.remove("d-none");
                email.setAttribute("required", "required");
                password.setAttribute("required", "required");
            } else {
                opciones.classList.add("d-none");
                email.removeAttribute("required");
                password.removeAttribute("required");
                email.value = "";
                password.value = "";
            }
        }
        // Ejecutar al cargar la página si ViewBag.TipoEmpleado es "Administrador"
        window.onload = function () {
            let categoria = document.getElementById("Categoria");
            if (categoria.value === "Administrador") {
                toggleOptions();
            }
        };
    </script>
</head>
<body class="">
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Nuevo Empleado</h1>
            <form method="post" asp-controller="Admin" asp-action="editEmpleados">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="Nombre" class="form-label">Nombre del Empleado</label>
                        <input asp-for="Nombre" name="Nombre" type="text" class="form-control" id="Nombre" required>
                        <div class="invalid-feedback">Se requiere un nombre válido.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="Categoria" class="form-label">Rango del Empleado</label>
                        <select asp-for="TipoEmpleado" name="TipoEmpleado" class="form-select" id="Categoria" required onchange="toggleOptions()">
                            <option value="">Rango...</option>
                            <option>Asesor</option>
                            <option>Manager</option>
                            <option>Administrador</option>
                        </select>
                        <div class="invalid-feedback">Seleccione un rango válido.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="formFileMultiple" class="form-label">Selecciona la Imagen</label>
                        <input asp-for="DireccionImagen" name="DireccionImagen" class="form-control" type="file" id="formFileMultiple" multiple>
                    </div>

                    <div class="col-sm-6">
                        <label for="Sexo" class="form-label">Sexo</label>
                        <select asp-for="Sexo" name="Sexo" class="form-select" id="Sexo" required>
                            <option value="">Sexo...</option>
                            <option>Masculino</option>
                            <option>Femenino</option>
                        </select>
                        <div class="invalid-feedback">Seleccione un sexo válido.</div>
                    </div>
                    <div class="col-sm-6">
                        <label for="Site" class="form-label">Site</label>
                        <select asp-for="IdSite" name="IdSite" class="form-select" id="Site" required>
                            <option value="">Site...</option>
                            @foreach (var site in ViewBag.Sites)
                            {
                                <option value="@site.Id">@site.Nombre</option>
                            }
                        </select>
                        <div class="invalid-feedback">Seleccione un sexo válido.</div>
                    </div>
                </div>

                <br />
                <div id="opciones" class="d-none row g-3">
                    <div class="col-md-6">
                        <label for="Email" class="form-label">Correo Electrónico</label>
                        <input value="@ViewBag.Correo" name="Correo" type="email" class="form-control" id="Email">
                        <div class="invalid-feedback">Ingrese un correo electrónico válido.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="Password" class="form-label">Contraseña</label>
                        <input value="@ViewBag.Contrasena" name="Contrasena" type="password" class="form-control" id="Password">
                        <div class="invalid-feedback">Ingrese una contraseña válida.</div>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Agregar categoria</button>
            </form>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
