@{
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabla de Usuarios con Filtros</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/admin.css">
</head>
<body>
    <iframe frameborder="0" class="navbar" src="navbar.html"></iframe>

    <div class="container">
        <h1 class="text-center mb-4">Tabla de Empleados</h1>

        <!-- Botones de filtro -->
        <div class="mb-3">
            <button class="btn btn-primary btn-sm" onclick="filterUsers('all')">Todos</button>
            <button class="btn btn-success btn-sm" onclick="filterUsers('active')">Activos</button>
            <button class="btn btn-secondary btn-sm" onclick="filterUsers('inactive')">Inactivos</button>
        </div>

        <!-- Tabla de usuarios -->
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th><a class="btn btn-success btn-sm" asp-controller="Admin" asp-action="editEmpleados">Agregar</a></th>
                </tr>
            </thead>
            <tbody id="usersTableBody">
                <!-- Datos de usuarios -->
                <tr data-status="active">
                    <td>1</td>
                    <td>Juan Pérez</td>
                    <td>juan@example.com</td>
                    <td><span class="badge bg-success">Activo</span></td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="editUser(1)">Modificar</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteUser(1)">Eliminar</button>
                    </td>
                </tr>
                <tr data-status="inactive">
                    <td>2</td>
                    <td>María García</td>
                    <td>maria@example.com</td>
                    <td><span class="badge bg-secondary">Inactivo</span></td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="editUser(2)">Modificar</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteUser(2)">Eliminar</button>
                    </td>
                </tr>
                <tr data-status="active">
                    <td>3</td>
                    <td>Carlos López</td>
                    <td>carlos@example.com</td>
                    <td><span class="badge bg-success">Activo</span></td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="editUser(3)">Modificar</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteUser(3)">Eliminar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS y dependencias -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Script para manejar las acciones y filtros -->
    <script>
        // Función para editar un usuario
        function editUser(id) {
            alert(`Modificar usuario con ID: ${id}`);
            // Aquí puedes agregar la lógica para editar el usuario
        }

        // Función para eliminar un usuario
        function deleteUser(id) {
            if (confirm(`¿Estás seguro de eliminar al usuario con ID: ${id}?`)) {
                alert(`Usuario con ID: ${id} eliminado`);
                // Aquí puedes agregar la lógica para eliminar el usuario
            }
        }

        // Función para filtrar usuarios
        function filterUsers(status) {
            const rows = document.querySelectorAll("#usersTableBody tr");

            rows.forEach(row => {
                const rowStatus = row.getAttribute("data-status");

                if (status === "all" || rowStatus === status) {
                    row.style.display = ""; // Mostrar la fila
                } else {
                    row.style.display = "none"; // Ocultar la fila
                }
            });
        }
    </script>
</body>
</html>