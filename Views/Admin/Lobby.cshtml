@{
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bienvenida Administrador</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/admin.css">
    <style>
        /* Estilos personalizados */
        .welcome-section {
            /* background-color: #f8f9fa; */
            padding: 100px 0;
            text-align: center;
        }

        .clock {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007BFF;
        }
    </style>
</head>
<body>
    <!-- Espacio para cargar la barra de navegación -->
    <iframe frameborder="0" class="navbar" src="navbar.html"></iframe>

    <!-- Sección de bienvenida -->
    <section class="welcome-section">
        <div class="container">
            <h1>Bienvenido, @ViewBag.Nombre</h1>
            <p class="lead">Gestiona tu sitio web de manera eficiente desde este panel.</p>
            <div class="clock" id="clock">00:00:00</div>
        </div>
    </section>

    <!-- Bootstrap JS y código del reloj -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Función para actualizar el reloj
        function updateClock() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            document.getElementById('clock').textContent = `${hours}:${minutes}:${seconds}`;
        }

        // Actualizar el reloj cada segundo
        setInterval(updateClock, 1000);
        updateClock(); // Llamar a la función inmediatamente para evitar un retraso inicial
    </script>
</body>
</html>