@{
    if (ViewBag.Tipo == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
    else if (ViewBag.Tipo == "Site")
    {
        Layout = "_Layout";
    }
}
    <style>
        body {
        body {
            background: linear-gradient(120deg, #89CFF0, #4682B4); /* Tono más definido de azul */
            color: #ffffff; /* Blanco puro para destacar sobre el azul */
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
            margin-top: 100px;
        }

        h1 {
            font-size: 2.5rem;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }

        #reloj {
            font-size: 1.5rem;
            margin-top: 20px;
            font-weight: bold;
        }
    </style>

    <div class="container">
        <h1>Hola, <span id="usuario">@ViewBag.Nombre</span> 👋</h1>
        <p>¡Esperamos que tengas un excelente día!</p>
        <div id="reloj"></div>
    </div>

    <!-- JavaScript de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- JavaScript personalizado -->
    <script>
        // Reloj que muestra la fecha y la hora
        function actualizarReloj() {
            const ahora = new Date();
            const opcionesFecha = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const fecha = ahora.toLocaleDateString('es-ES', opcionesFecha);
            const hora = ahora.toLocaleTimeString('es-ES');

            document.getElementById("reloj").innerHTML = `${fecha} - ${hora}`;
        }

        // Actualizar el reloj cada segundo
        setInterval(actualizarReloj, 1000);
        actualizarReloj(); // Inicializar inmediatamente
</script>
